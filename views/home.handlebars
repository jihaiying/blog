<div class="col-3-5 main-content pb-50 order-1 order-lg-2">
    <div class="loop-list-2">
        {{#each listData}}
            <article class="row mb-50 wow fadeInUp animated">
                <div class="col-md-12">
                    <div class="post-content">
                        <h3><a href="single.html">{{title}}</a></h3>
                        <div class="entry-meta meta-1 font-small color-grey mt-15 mb-30">
                            <span class="post-on">{{date}}</span>
                            <span class="hit-count has-dot">阅读 {{readNum}}</span>
                            <span class="hit-count has-dot">评论 {{commentNum}}</span>
                        </div>
                        {{#if desc}}
                            <div class="post-exerpt">
                                <p>{{desc}}</p>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </article>
        {{/each}}
    </div>


    <!--Loop list 2-->
    <div class="pagination-area text-uppercase wow fadeInUp animated">
        <div class="pagination-area-inner">
            <ul class="pagination justify-content-start">
                <li class="page-item"><a class="page-link" href="#">上一页 </a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">...</li>
                <li class="page-item"><a class="page-link" href="#">17</a></li>
                <li class="page-item"><a class="page-link" href="#">下一页 </a></li>
            </ul>
        </div>
    </div>
</div>